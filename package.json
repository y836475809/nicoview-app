{
  "name": "nicoview-app",
  "version": "0.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "test-main": "electron . --debug --mock_server_port 8098",
    "test-search": "electron . --debug --mock_server_port 8098 --main test/test-search.html --config config-debug.json",
    "test-setting": "electron . --debug --main test/test-setting.html --config config-debug.json",
    "test-mylist": "electron . --debug --mock_server_port 8098 --main test/test-mylist.html --config config-debug.json",
    "test-nicoscript": "electron . --debug --main test/test-nicoscript.html --config config-debug.json",
    "test-tween": "electron . --debug --main test/test-tween.html --config config-debug.json",
    "main": "electron .",
    "test": "ava -v -s",
    "pack-dir": "electron-builder --x64 --dir",
    "pack": "electron-builder --x64"
  },
  "author": "y836475809",
  "license": "MIT",
  "devDependencies": {
    "ava": "^3.8.2",
    "electron": "^9.0.4",
    "electron-builder": "^22.7.0",
    "nock": "^12.0.3",
    "sinon": "^9.0.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.13.0",
    "cheerio": "^1.0.0-rc.3",
    "electron-log": "^4.2.1",
    "gsap": "^3.3.2",
    "izitoast": "^1.4.0",
    "jquery": "^3.5.1",
    "riot": "^3.13.2",
    "slickgrid": "^2.4.24",
    "sortablejs": "^1.10.2",
    "sql.js": "^0.5.0"
  },
  "build": {
    "appId": "y836475809.app.nicoview-app",
    "directories": {
      "output": "./build"
    },
    "files": [
      "./main.js",
      "./app/**/*",
      "./icon/**/*"
    ],
    "extraResources": [
      {
        "from": "./app/css/user.css",
        "to": "user.css"
      }
    ],
    "win": {
      "icon": "./icon/icon.png",
      "target": "zip"
    }
  },
  "ava": {
    "files": [
      "__tests__/*.test.js"
    ]
  }
}
