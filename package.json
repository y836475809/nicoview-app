{
  "name": "riot_test",
  "version": "0.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "test-main": "electron . --debug --main test/test-main.html --player test/test-player.html",
    "test-search": "electron . --debug --main test/test-search.html --config config-debug.json",
    "test-setting": "electron . --debug --main test/test-setting.html --config config-debug.json",
    "test-mylist": "electron . --debug --main test/test-mylist.html --config config-debug.json",
    "test-nicoscript": "electron . --debug --main test/test-nicoscript.html --config config-debug.json",
    "test-tween": "electron . --debug --main test/test-tween.html --config config-debug.json",
    "main": "electron .",
    "test": "ava -v -s",
    "pack-dir": "electron-builder --x64 --dir",
    "pack": "electron-builder --x64"
  },
  "author": "y836475809",
  "license": "MIT",
  "devDependencies": {
    "ava": "^2.4.0",
    "electron": "^7.1.8",
    "electron-builder": "^22.4.1",
    "nock": "^11.7.1",
    "sinon": "^8.0.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.12.0",
    "cheerio": "^1.0.0-rc.3",
    "electron-log": "^4.1.1",
    "gsap": "^2.1.3",
    "izitoast": "^1.4.0",
    "jquery": "^3.4.1",
    "request": "^2.88.0",
    "riot": "^3.13.2",
    "slickgrid": "^2.4.16",
    "sortablejs": "^1.10.2",
    "sql.js": "^0.5.0"
  },
  "build": {
    "appId": "com.y836475809.riot_test",
    "directories": {
      "output": "./build"
    },
    "files": [
      "./main.js",
      "./app/**/*"
    ],
    "extraResources": [
      {
        "from": "./app/css/setting.css",
        "to": "setting.css"
      }
    ],
    "win": {
      "target": "zip"
    }
  },
  "ava": {
    "files": [
      "__tests__/*.test.js"
    ]
  }
}
