{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Electron: Main",
            "cwd": "${workspaceRoot}",
            "outputCapture": "std",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/electron.cmd"
            },
            "runtimeArgs": [
                ".", 
                "--test=test-main",
                "--remote-debugging-port=9222"
            ],
            "sourceMaps": true,
        },
        {
            "name": "Electron: Renderer",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "webRoot": "${workspaceRoot}",
            "outputCapture": "std",
            "timeout": 10000
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug AVA test file",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceFolder}/node_modules/ava/entrypoints/cli.mjs",
            "args": [
                "--break",
                "--serial",
                "${file}"
            ],
            "outputCapture": "std",
            "skipFiles": [
              "<node_internals>/**/*.js"
            ]
        }
    ],
    "compounds": [
        {
            "name": "Electron: All",
            "configurations": [
                "Electron: Main",
                "Electron: Renderer"
            ]
        }
    ]
}