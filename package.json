{
  "name": "nicoview-app",
  "version": "0.16.32",
  "description": "electron製のニコニコ動画閲覧アプリ",
  "main": "app/main/main.js",
  "scripts": {
    "test-main": "electron . --test=test-main",
    "test-search": "electron . --test=test-search",
    "test-setting": "electron . --test=test-setting",
    "test-mylist": "electron . --test=test-mylist",
    "test-comment": "electron . --test=test-comment",
    "test-tag": "electron . --test=test-tag",
    "main": "electron .",
    "eslint": "eslint ./app/**/*.js ./app/html/*.html ./__tests__/**/*.js ./test/**/*.js ./test/*.html || exit 0",
    "test": "ava -v -s",
    "build": "electron-builder --x64 --dir",
    "build-zip": "electron-builder --x64"
  },
  "author": "y836475809",
  "license": "MIT",
  "devDependencies": {
    "ava": "^4.3.3",
    "electron": "^20.1.0",
    "electron-builder": "^23.3.3",
    "eslint": "^8.23.0",
    "eslint-plugin-html": "^7.1.0",
    "nock": "^13.2.9",
    "sinon": "^14.0.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.1.2",
    "cheerio": "^1.0.0-rc.12",
    "electron-log": "^4.4.8",
    "gsap": "^3.11.0",
    "riot": "^7.0.4",
    "slickgrid": "^2.4.45",
    "sql.js": "^1.7.0"
  },
  "build": {
    "appId": "y836475809.app.nicoview-app",
    "directories": {
      "output": "./build"
    },
    "files": [
      "./app/**/*",
      "./icon/**/*"
    ],
    "extraResources": [
      {
        "from": "./app/css/user.css",
        "to": "user.css"
      }
    ],
    "win": {
      "icon": "./icon/icon.png",
      "target": "zip"
    }
  },
  "ava": {
    "files": [
      "__tests__/*.test.js"
    ],
    "environmentVariables": {
      "user_agent": "unit test"
    }
  }
}
