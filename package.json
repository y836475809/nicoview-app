{
  "name": "nicoview-app",
  "version": "0.13.23.3",
  "description": "electron製のニコニコ動画閲覧アプリ",
  "main": "app/main/main.js",
  "scripts": {
    "test-main": "electron . --debug=true --name=test-main",
    "test-search": "electron . --debug=true --name=test-search",
    "test-setting": "electron . --debug=true --name=test-setting",
    "test-mylist": "electron . --debug=true --name=test-mylist",
    "test-comment": "electron . --debug=true --name=test-comment",
    "main": "electron . --app_css=true",
    "test": "ava -v -s",
    "build": "electron-builder --x64 --dir",
    "build-zip": "electron-builder --x64"
  },
  "author": "y836475809",
  "license": "MIT",
  "devDependencies": {
    "ava": "^3.15.0",
    "electron": "^12.0.6",
    "electron-builder": "^22.10.5",
    "eslint-plugin-html": "^6.1.2",
    "nock": "^13.0.11",
    "sinon": "^10.0.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.3",
    "cheerio": "^1.0.0-rc.6",
    "electron-log": "^4.3.5",
    "gsap": "^3.6.1",
    "riot": "^3.13.2",
    "slickgrid": "^2.4.34",
    "sortablejs": "^1.13.0",
    "sql.js": "^0.5.0"
  },
  "build": {
    "appId": "y836475809.app.nicoview-app",
    "directories": {
      "output": "./build"
    },
    "files": [
      "./app/**/*",
      "./icon/**/*"
    ],
    "extraResources": [
      {
        "from": "./app/css/user.css",
        "to": "user.css"
      }
    ],
    "win": {
      "icon": "./icon/icon.png",
      "target": "zip"
    }
  },
  "ava": {
    "files": [
      "__tests__/*.test.js"
    ],
    "environmentVariables": {
      "user_agent": "unit test"
    }
  }
}
