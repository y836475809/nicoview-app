{
  "name": "nicoview-app",
  "version": "0.16.29",
  "description": "electron製のニコニコ動画閲覧アプリ",
  "main": "app/main/main.js",
  "scripts": {
    "test-main": "electron . --test=test-main",
    "test-search": "electron . --test=test-search",
    "test-setting": "electron . --test=test-setting",
    "test-mylist": "electron . --test=test-mylist",
    "test-comment": "electron . --test=test-comment",
    "test-tag": "electron . --test=test-tag",
    "main": "electron .",
    "eslint": "eslint ./app/**/*.js ./app/html/*.html ./__tests__/**/*.js ./test/**/*.js ./test/*.html || exit 0",
    "test": "ava -v -s",
    "build": "electron-builder --x64 --dir",
    "build-zip": "electron-builder --x64"
  },
  "author": "y836475809",
  "license": "MIT",
  "devDependencies": {
    "ava": "^3.15.0",
    "electron": "^12.1.2",
    "electron-builder": "^22.11.7",
    "eslint-plugin-html": "^6.2.0",
    "nock": "^13.1.3",
    "sinon": "^10.0.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "cheerio": "^1.0.0-rc.10",
    "electron-log": "^4.4.1",
    "gsap": "^3.7.1",
    "riot": "^6.0.4",
    "slickgrid": "^2.4.40",
    "sortablejs": "^1.14.0",
    "sql.js": "^0.5.0"
  },
  "build": {
    "appId": "y836475809.app.nicoview-app",
    "directories": {
      "output": "./build"
    },
    "files": [
      "./app/**/*",
      "./icon/**/*"
    ],
    "extraResources": [
      {
        "from": "./app/css/user.css",
        "to": "user.css"
      }
    ],
    "win": {
      "icon": "./icon/icon.png",
      "target": "zip"
    }
  },
  "ava": {
    "files": [
      "__tests__/*.test.js"
    ],
    "environmentVariables": {
      "user_agent": "unit test"
    }
  }
}
