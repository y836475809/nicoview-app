{
  "name": "nicoview-app",
  "version": "0.1.8",
  "description": "",
  "main": "app/main.js",
  "scripts": {
    "test-main": "electron . --debug --name test-main",
    "test-search": "electron . --debug --name test-search",
    "test-setting": "electron . --debug --name test-setting",
    "test-mylist": "electron . --debug --name test-mylist",
    "test-nicoscript": "electron . --debug --name test-nicoscript",
    "test-tween": "electron . --debug --name test-tween",
    "main": "electron .",
    "test": "ava -v -s",
    "build": "electron-builder --x64 --dir",
    "build-zip": "electron-builder --x64"
  },
  "author": "y836475809",
  "license": "MIT",
  "devDependencies": {
    "ava": "^3.12.1",
    "electron": "^9.3.0",
    "electron-builder": "^22.8.0",
    "eslint-plugin-html": "^6.1.0",
    "nock": "^13.0.4",
    "sinon": "^9.0.3"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.14.0",
    "cheerio": "^1.0.0-rc.3",
    "electron-log": "^4.2.4",
    "gsap": "^3.5.1",
    "riot": "^3.13.2",
    "slickgrid": "^2.4.28",
    "sortablejs": "^1.10.2",
    "sql.js": "^0.5.0"
  },
  "build": {
    "appId": "y836475809.app.nicoview-app",
    "directories": {
      "output": "./build"
    },
    "files": [
      "./app/**/*",
      "./icon/**/*"
    ],
    "extraResources": [
      {
        "from": "./app/css/user.css",
        "to": "user.css"
      }
    ],
    "win": {
      "icon": "./icon/icon.png",
      "target": "zip"
    }
  },
  "ava": {
    "files": [
      "__tests__/*.test.js"
    ],
    "environmentVariables": {
      "user_agent": "unit test"
    }
  }
}
